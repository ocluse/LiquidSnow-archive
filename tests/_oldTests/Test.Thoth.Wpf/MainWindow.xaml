<Window x:Class="Test.Thoth.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test.Thoth.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:DataContext="local:DataContext">
    <Window.DataContext>
        <local:DataContext/>
    </Window.DataContext>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Width="300" Text="{Binding NameText, UpdateSourceTrigger=PropertyChanged}" Margin="10"/>
            <TextBlock Text="{Binding HeaderText}" Margin="10"/>
            <Button Content="{Binding ButtonText}" Command="{Binding ChangeLocaleCommand}" Width="100" Height="30"/>
            <Button Content="{Binding ButtonText2}" Command="{Binding BindCommand}" Width="100" Height="30"/>
            <Button Content="{Binding ButtonText3}" Command="{Binding ChangeKeyCommand}" Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
